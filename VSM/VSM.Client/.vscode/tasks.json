{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "kill-port-5000",
      "type": "shell",
      "command": "bash -c 'kill -9 56415 2>/dev/null || true; pid=$(lsof -t -i:5000 2>/dev/null); if [ \"$pid\" != \"\" ]; then echo \"Killing processes on port 5000: $pid\"; kill -9 $pid; else echo \"No processes found on port 5000\"; fi'",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/VSM.Client.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/VSM.Client.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/VSM.Client.csproj"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true
    },
    {
      "label": "Forward Port 5000",
      "type": "shell",
      "command": "echo 'Port 5000 is being forwarded to your local machine. Access your application at https://${env:CODESPACE_NAME}-5000.app.github.dev'",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "isBackground": true
    },
    {
      "label": "blazor-wasm-debug",
      "dependsOn": [
        "kill-port-5000",
        "build"
      ],
      "dependsOrder": "sequence",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--launch-profile",
        "codespaces"
      ],
      "problemMatcher": "$msCompile",
      "options": {
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development",
          "ASPNETCORE_URLS": "http://0.0.0.0:5000"
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "build-and-forward",
      "dependsOn": [
        "kill-port-5000",
        "build",
        "Forward Port 5000"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
