      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/server/tests/generate_vts_simulations/main_GenerateSimulation.py",
      "args": [],
      "python": "${workspaceFolder}/.venv/bin/python",
      "console": "integratedTerminal",
