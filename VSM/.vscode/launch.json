{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🐍 Start FastAPI Server (Port 5173)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/server/main.py",
      "python": "${workspaceFolder}/server/.venv/bin/python",
      "cwd": "${workspaceFolder}/server",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/server",
        "VIRTUAL_ENV": "${workspaceFolder}/server/.venv",
        "PATH": "${workspaceFolder}/server/.venv/bin:${env:PATH}"
      },
      "args": []
    },
    {
      "name": "🌐 VSM Server - Development (Port 5000) [Debug]",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/VSM/bin/Debug/net9.0/VSM.dll",
      "args": [],
      "cwd": "${workspaceFolder}/VSM",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://\\S+)",
        "uriFormat": "%s"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://0.0.0.0:5000"
      }
    },
        {
      "name": "🌐 Debug Blazor Client - Development (Port 5000)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5000",
      "webRoot": "${workspaceFolder}/VSM.Client"
    },

    {
      "name": "Test FastAPI endpoints",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/api/test_endpoints.py",
        "-v",
        "--tb=short"
      ],
      "python": "${workspaceFolder}/server/.venv/bin/python",
      "cwd": "${workspaceFolder}/server",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/server",
        "VIRTUAL_ENV": "${workspaceFolder}/server/.venv",
        "PATH": "${workspaceFolder}/server/.venv/bin:${env:PATH}"
      }
    },
    {
      "name": "🚀 VSM Server - Development (Port 5000) [Run]",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/VSM/bin/Debug/net9.0/VSM.dll",
      "args": [],
      "cwd": "${workspaceFolder}/VSM",
      "stopAtEntry": false,
      "justMyCode": false,
      "enableStepFiltering": false,
      "suppressJITOptimizations": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://\\S+)",
        "uriFormat": "%s"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://0.0.0.0:5000"
      }
    },
    {
      "name": "🔄 VSM Server - Staging/Test (Port 5002)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/VSM/bin/Debug/net9.0/VSM.dll",
      "args": [],
      "cwd": "${workspaceFolder}/VSM",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://\\S+)",
        "uriFormat": "%s"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://0.0.0.0:5002"
      }
    },
    {
      "name": "⚙️ VSM Server - Debug/Custom (Port 5003)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/VSM/bin/Debug/net9.0/VSM.dll",
      "args": [],
      "cwd": "${workspaceFolder}/VSM",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://\\S+)",
        "uriFormat": "%s"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://0.0.0.0:5003"
      }
    },
    {
      "name": "🔒 VSM Server - Secure/HTTPS (Port 5001)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/VSM/bin/Debug/net9.0/VSM.dll",
      "args": [],
      "cwd": "${workspaceFolder}/VSM",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://\\S+)",
        "uriFormat": "%s"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://0.0.0.0:5001;http://0.0.0.0:5000"
      }
    },
    {
      "name": "🔌 Attach to Running VSM Server",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "justMyCode": true
    },
    {
      "name": "🌐 Debug Blazor Client - Development (Port 5000)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5000",
      "webRoot": "${workspaceFolder}/VSM.Client"
    },
    {
      "name": "🔄 Debug Blazor Client - Staging/Test (Port 5002)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5002",
      "webRoot": "${workspaceFolder}/VSM.Client"
    },
    {
      "name": "⚙️ Debug Blazor Client - Debug/Custom (Port 5003)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5003",
      "webRoot": "${workspaceFolder}/VSM.Client"
    }
  ],
  "compounds": [
    {
      "name": "🚀 Full Stack Debug - Development Environment",
      "configurations": [
        "🌐 VSM Server - Development (Port 5000) [Debug]",
        "🌐 Debug Blazor Client - Development (Port 5000)"
