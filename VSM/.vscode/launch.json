{
  "version": "0.2.0",
  "configurations": [

    {
      "name": ".NET 9 Launch VSM Server",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/VSM/bin/Debug/net9.0/VSM.dll",
      "args": [],
      "cwd": "${workspaceFolder}/VSM",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "launchBrowser": {
        "enabled": true,
        "args": "http://localhost:5000"
      }
    }
  ]
}
