    },
    {
      "name": "Debug test_scheduler_and_agents_with_full_cleanup_round",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/integration/test_scheduler_and_agents.py::TestSchedulerAndAgents::test_scheduler_and_agents_with_full_cleanup_round",
        "-v",
        "-s",
        "--tb=short"
      ],
      "python": "${workspaceFolder}/.venv/bin/python",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/server",
      "justMyCode": true,
      "env": {
