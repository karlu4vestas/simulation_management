{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üêç Start FastAPI Server (Port 5173)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/server/main.py",
      "python": "${workspaceFolder}/.venv/bin/python",
      "cwd": "${workspaceFolder}/server",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/server",
        "VIRTUAL_ENV": "${workspaceFolder}/.venv",
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}",
        "PORT": "5173",
        "HOST": "0.0.0.0"
      },
      "args": [
        "--host",
        "0.0.0.0",
        "--port",
        "5173",
        "--reload"
      ]
    },
    {
      "name": "Launch Blazor Server",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/VSM/bin/Debug/net9.0/VSM.dll",
      "args": [],
      "cwd": "${workspaceFolder}/VSM",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://0\\.0\\.0\\.0:\\d+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://0.0.0.0:5100"
      },
      "logging": {
        "trace": true
      }
    },
    {
      "name": "üåê VSM Server - Development (Port 5000) [Debug]",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/VSM/bin/Debug/net9.0/VSM.dll",
      "args": [],
      "cwd": "${workspaceFolder}/VSM",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://0.0.0.0:5400"
      },
      "justMyCode": false,
      "enableStepFiltering": false,
      "requireExactSource": true,
      "symbolOptions": {
        "searchMicrosoftSymbolServer": true,
        "searchNuGetSymbolServer": true
      },
      "internalConsoleOptions": "openOnSessionStart",
      "suppressJITOptimizations": true,
      "logging": {
        "moduleLoad": false
      }
    },
    {
      "name": "Test FastAPI endpoints",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/api/test_endpoints.py",
        "-v",
        "--tb=short"
      ],
      "python": "${workspaceFolder}/.venv/bin/python",
      "cwd": "${workspaceFolder}/server",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/server",
        "VIRTUAL_ENV": "${workspaceFolder}/.venv",
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
      }
    },
    {
      "name": "üîå Attach to Running VSM Server",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "justMyCode": true
    },
    {
      "name": "üåê Debug Blazor Client - Development (Port 5000)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5000",
      "webRoot": "${workspaceFolder}/VSM.Client"
    },
    {
      "name": "Launch Client",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/VSM.Client/bin/Debug/net9.0/VSM.Client.dll",
      "args": [],
      "cwd": "${workspaceFolder}/VSM.Client",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Debug DB Unit Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/server/run_db_unittests.py",
      "python": "${workspaceFolder}/.venv/bin/python",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/server",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/server",
        "VIRTUAL_ENV": "${workspaceFolder}/.venv",
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
      }
    },
    {
